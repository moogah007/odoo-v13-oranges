<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_sap_lfa1" model="ir.actions.act_window">
        <field name="name">Suppliers</field>
        <field name="res_model">sap.lfa1</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>SAP Suppliers</p>
        </field>
    </record>

    <record id="sap_lfa1_view_form" model="ir.ui.view">
        <field name="name">sap.lfa1.view.form</field>
        <field name="model">sap.lfa1</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="NAME1"/>
                            <field name="ORT01"/>
                            <field name="LIFNR"/>
                            <field name="KTOKK"/>
                            <field name="LAND1"/>
                            <field name="PSTLZ"/>
                            <field name="ZZCONDREG1"/>
                        </group>
                        <group>
                            <field name="REGIO"/>
                            <field name="SPRAS"/>
                            <field name="STCD1"/>
                            <field name="STRAS"/>
                            <field name="TELF1"/>
                            <field name="LFURL"/>
                            <field name="BUKRS"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sap_lfa1_view_tree" model="ir.ui.view">
        <field name="name">sap.lfa1.view.tree</field>
        <field name="model">sap.lfa1</field>
        <field name="arch" type="xml">
            <tree string="SAP Industry">
                <field name="NAME1"/>
                <field name="ORT01"/>
            </tree>
        </field>
    </record>

</odoo>