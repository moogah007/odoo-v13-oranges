<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_sap_inter_functions" model="ir.actions.act_window">
        <field name="name">Interlocutor Functions</field>
        <field name="res_model">sap.knvp</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>SAP Interlocutor Funtions</p>
        </field>
    </record>

    <record id="sap_knvp_view_form" model="ir.ui.view">
        <field name="name">sap.knvp.view.form</field>
        <field name="model">sap.knvp</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="KUNNR"/>
                            <field name="VKORG"/>
                            <field name="VTWEG"/>
                            <field name="SPART"/>
                            <field name="PARVW"/>
                            <field name="KUNN2"/>
                            <field name="partner_id"/>
                            <field name="process_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sap_knvp_view_tree" model="ir.ui.view">
        <field name="name">sap.knvp.view.tree</field>
        <field name="model">sap.knvp</field>
        <field name="arch" type="xml">
            <tree string="Interlocutor Functions">
                <field name="KUNNR"/>
                <field name="VKORG"/>
                <field name="VTWEG"/>
                <field name="SPART"/>
                <field name="PARVW"/>
                <field name="KUNN2"/>
            </tree>
        </field>
    </record>

</odoo>
